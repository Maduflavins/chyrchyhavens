<% include ../partials/header %>
<div class="container">
    <div class="row">

    <h1 style="text-align:center;">Edit <%= church.name%></h1>
    <div style="width:30%; margin:25px auto;">

        <form action="/churches/<%=church._id%>/?_method=PUT" method ="POST">
            <div class="form-group">
                <input class="form-control" type="text" church"[name]" value="<%=church.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church"[image]" value="<%=church.image%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church"[founder]" value="<%=church.founder%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church="[date]" value="<%=church.date%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church="[GOS]" value="<%=church.GOS%>">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church="[NetWorth]" value="<%=church.NetWorth%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" church="[population]" value="<%=church.population%>">  
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/churches">Back to Churches</a>
    </div>
    </div>
</div>



<% include ../partials/footer %>