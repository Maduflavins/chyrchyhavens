<% include ../partials/header %>

    <h1><%=church.name%></h1>

    <img src="<%=church.image%>">

    <p><%=church.founder%></p>
    <p><%-church.date%></p>
    <p><%=church.GOS%></p>
    <p><%=church.netWorth%></p>
    <p><%=church.population%></p>

    <p><a class="btn btn-success" href="/churches/<%=church._id%>/comments/new">Add new Comment</a></p>





<%church.comments.forEach(function(comment){%>
          <p>
              <strong><%=comment.author%></strong> - <%=comment.text%>
          </p>

<%})%>


<% include ../partials/footer %>