<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Church Haven</p>
            <div class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=church.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">NGN 200/Service</h4>
                    <h4><a><%=church.name%></a></h4>
                    <p><%=church.founder%></p>
                    <p><%-church.date%></p>
                    <p><%=church.GOS%></p>
                    <p><%=church.netWorth%></p>
                    <p><%=church.population%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                     <p><a class="btn btn-success" href="/churches/<%=church._id%>/comments/new">Please Review</a></p>
                </div>
                <hr>
                <%church.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author%></strong>
                            <span class="pull-right">5 days ago</span>
                            <p> <%=comment.text%></p>
                        </div>
                    </div>

                <%})%>

            </div>
        </div>
    </div>
</div>

    

    

    

   







<% include ../partials/footer %>