<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Church Haven</p>
            <div class="list-group">
                <li class="list-group-item active">Category 1</li>
                <li class="list-group-item">Category 2</li>
                <li class="list-group-item">Category 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=church.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">NGN<%=church.price%>/Service</h4>
                    <h4><a><%=church.name%></a></h4>
                    <p><em>Submitted by <%=church.author.username%></em></p>
                    <%if(currentUser && user.church.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-success" href="/churches/<%=church._id%>/edit>">Edit</a>
                        <form id="delete-form" action="/churches/<%=church._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Church</button>
                        </form>
                   <%}%>
                    <p><%=church.founder%></p>
                    <p><%-church.date%></p>
                    <p><%=church.GOS%></p>
                    <p><%=church.netWorth%></p>
                    <p><%=church.population%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                     <p><a class="btn btn-success" href="/churches/<%=church._id%>/comments/new">Please Review</a></p>
                </div>
                <hr>
                <%church.comments.forEach(function(comment){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author.username%></strong>
                            <span class="pull-right">5 days ago</span>
                            <p> <%=comment.text%></p>
                            <%if(currentUser && user.comment.author.id.equals(currentUser._id){%>
                                <p><a class="btn btn-primary" href="/churches/<%=church._id%>/comments/<%=comment._id%>/edit">Edit</a></p>
                                <form id = "delete-form" action="/churches/<%=church._id%>/comments/<%=comment._id%>?_method=DELETE">
                                    <input class = "btn btn-xs, btn-danger" type="submit" value="delete">
                                </form>
                            <%{%>
                        </div>
                    </div>

                <%})%>

            </div>
        </div>
    </div>
</div>

    

    

    

   







<% include ../partials/footer %>