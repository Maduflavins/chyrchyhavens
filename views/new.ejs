<% include partials/header %>
<div class="container">
    <div class="row">

    <h1 style="text-align:center;">Add a New Church</h1>
    <div style="width:30%; margin:25px auto;">

        <form action="/churches" method ="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="church name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="founder" placeholder="Founder">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="date" placeholder="date found">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="GOS" placeholder="GOS">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="NetWorth" placeholder="NetWorth">  
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="population" placeholder="Population">  
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/churches">Back to Churches</a>
    </div>
    </div>
</div>



<% include partials/footer %>